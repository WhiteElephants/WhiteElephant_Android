<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/male_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_segment"
            android:background="@drawable/bg_1_px_bottom_grey_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/material_padding">

            <TextView
                style="@style/normalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/male_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_correct" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/female_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_segment"
            android:background="@drawable/background_pressable"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/material_padding">

            <TextView
                style="@style/normalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/female_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_correct" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>