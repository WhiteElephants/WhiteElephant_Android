<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sub_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bg_image_card"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_post_item_sub_text">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:maxLines="5"
            android:minLines="5"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="12dp" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/bg_image_card"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <rawe.gordon.com.fruitmarketclient.views.posts.subviews.RatioImageView
                android:id="@+id/bg_image"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/bg_post_item"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/add_sub_text_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/bg_image"
                android:layout_alignLeft="@+id/bg_image">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/add_sub_text_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_arrow_downward_black" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/bg_image"
                android:layout_alignRight="@+id/bg_image">

                <RelativeLayout
                    android:id="@+id/c_one"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:alpha="0">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/icon_one"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_play_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/c_two"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:alpha="0">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/icon_two"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_photo_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/c_three"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:alpha="0">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/icon_three"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_text_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_container"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/add_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_add_black" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>