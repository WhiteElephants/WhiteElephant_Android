<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/input_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="@string/write_something"
            android:minLines="4"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="12dp" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/input_area"
        android:layout_alignRight="@+id/input_area">

        <RelativeLayout
            android:id="@+id/c_one"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:alpha="0">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icon_one"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_play_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/c_two"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:alpha="0">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icon_two"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_photo_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/c_three"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:alpha="0">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icon_three"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_text_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/add_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_add_black" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>