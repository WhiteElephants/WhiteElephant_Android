<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainMiddle</item>
        <item name="colorPrimaryDark">@color/mainDark</item>
        <item name="colorAccent">@color/mainMiddle</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
    </style>

    <style name="noAnimationTheme" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="styleActionBar">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="logoTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#484848</item>
    </style>

    <style name="searchTextStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="logoSubTextStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="normalTextStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="normalStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="superBig">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commentTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#484848</item>
    </style>

    <style name="titleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#484848</item>
    </style>

    <style name="titleStyleLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="commentContentStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#484848</item>
    </style>

    <style name="commentSubStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#484848</item>
    </style>

    <style name="PopChooserAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_shrink_fade_out_from_bottom</item>
    </style>


    <!-- below area are the 9+ related styles, and above are unnecessary codes but removing them can cause error, we remove them later if we have time -->

    <style name="LauncherTabDefaultTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textDarkGray</item>
    </style>


</resources>
